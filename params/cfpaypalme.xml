<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="fieldparams">
		<fieldset name="fieldparams">
			<field
				name="useraccount"
				type="text"
                default=""
				label="PLG_FIELDS_CFPAYPALME_PARAMS_USERACCOUNT_LABEL"
				description="PLG_FIELDS_CFPAYPALME_PARAMS_USERACCOUNT_DESCRIPTION"
			/>
			<field
				name="textbutton"
				type="text"
                default=""
				label="PLG_FIELDS_CFPAYPALME_PARAMS_TEXTBUTTON_LABEL"
				description="PLG_FIELDS_CFPAYPALME_PARAMS_TEXTBUTTON_DESCRIPTION"
			/>
			<field
				name="iconbutton"
				type="radio"
				label="PLG_FIELDS_CFPAYPALME_PARAMS_ICONBUTTON_LABEL"
				description="PLG_FIELDS_CFPAYPALME_PARAMS_ICONBUTTON_DESCRIPTION"
				class="btn-group btn-group-yesno"
				default="1"
				>
				<option value="1">JSHOW</option>
				<option value="0">JHIDE</option>
			</field>
			<field
				name="openbutton"
				type="radio"
				label="PLG_FIELDS_CFPAYPALME_PARAMS_OPENBUTTON_LABEL"
				description="PLG_FIELDS_CFPAYPALME_PARAMS_OPENBUTTON_DESCRIPTION"
				class="btn-group btn-group-yesno"
				default="_self"
				>
				<option value="_self">PLG_FIELDS_CFPAYPALME_PARAMS_OPENBUTTON_SELF</option>
				<option value="_blank">PLG_FIELDS_CFPAYPALME_PARAMS_OPENBUTTON_BLANK</option>
			</field>
			<field
				name="typebutton"
				type="list"
				label="PLG_FIELDS_CFPAYPALME_PARAMS_TYPEBUTTON_LABEL"
				description="PLG_FIELDS_CFPAYPALME_PARAMS_TYPEBUTTON_DESCRIPTION"
				default="1"
				>
				<option value="1">PLG_FIELDS_CFPAYPALME_PARAMS_TYPEBUTTON_LINK</option>
				<option value="2">PLG_FIELDS_CFPAYPALME_PARAMS_TYPEBUTTON_BOOTSTRAP</option>
				<option value="3">PLG_FIELDS_CFPAYPALME_PARAMS_TYPEBUTTON_UIKIT</option>
				<option value="4">PLG_FIELDS_CFPAYPALME_PARAMS_TYPEBUTTON_CUSTOM</option>
			</field>
			<field
				name="colortextbutton"
				type="color"
                default="#337ab7"
				label="PLG_FIELDS_CFPAYPALME_PARAMS_COLORTEXTBUTTON_LABEL"
				description="PLG_FIELDS_CFPAYPALME_PARAMS_COLORTEXTBUTTON_DESCRIPTION"
				showon="typebutton:1,4"
			/>
			<field
				name="colorbackgroundbutton"
				type="color"
                default="#337ab7"
				label="PLG_FIELDS_CFPAYPALME_PARAMS_COLORBACKGRUNDBUTTON_LABEL"
				description="PLG_FIELDS_CFPAYPALME_PARAMS_COLORBACKGROUNDBUTTON_DESCRIPTION"
				showon="typebutton:4"
			/>
			<field
				name="colorborderbutton"
				type="color"
                default="#2e6da4"
				label="PLG_FIELDS_CFPAYPALME_PARAMS_COLORBORDERBUTTON_LABEL"
				description="PLG_FIELDS_CFPAYPALME_PARAMS_COLORBORDERBUTTON_DESCRIPTION"
				showon="typebutton:4"
			/>
			<field
				name="stylebuttonb"
				type="list"
				label="PLG_FIELDS_CFPAYPALME_PARAMS_STYLEBUTTON_LABEL"
				description="PLG_FIELDS_CFPAYPALME_PARAMS_STYLEBUTTON_DESCRIPTION"
				showon="typebutton:2"
				>
				<option value="default">PLG_FIELDS_CFPAYPALME_PARAMS_STYLEBUTTON_DEFAULT</option>
				<option value="primary">PLG_FIELDS_CFPAYPALME_PARAMS_STYLEBUTTON_PRIMARY</option>
				<option value="success">PLG_FIELDS_CFPAYPALME_PARAMS_STYLEBUTTON_SUCCESS</option>
				<option value="info">PLG_FIELDS_CFPAYPALME_PARAMS_STYLEBUTTON_INFO</option>
				<option value="warning">PLG_FIELDS_CFPAYPALME_PARAMS_STYLEBUTTON_WARNING</option>
				<option value="danger">PLG_FIELDS_CFPAYPALME_PARAMS_STYLEBUTTON_DANGER</option>
				<option value="link">PLG_FIELDS_CFPAYPALME_PARAMS_STYLEBUTTON_LINK</option>
			</field>
			<field
				name="stylebuttonu"
				type="list"
				label="PLG_FIELDS_CFPAYPALME_PARAMS_STYLEBUTTON_LABEL"
				description="PLG_FIELDS_CFPAYPALME_PARAMS_STYLEBUTTON_DESCRIPTION"
				showon="typebutton:3"
				>
				<option value="default">PLG_FIELDS_CFPAYPALME_PARAMS_STYLEBUTTON_DEFAULT</option>
				<option value="primary">PLG_FIELDS_CFPAYPALME_PARAMS_STYLEBUTTON_PRIMARY</option>
				<option value="secondary">PLG_FIELDS_CFPAYPALME_PARAMS_STYLEBUTTON_SECONDARY</option>
				<option value="danger">PLG_FIELDS_CFPAYPALME_PARAMS_STYLEBUTTON_DANGER</option>
				<option value="text">PLG_FIELDS_CFPAYPALME_PARAMS_STYLEBUTTON_TEXT</option>
				<option value="link">PLG_FIELDS_CFPAYPALME_PARAMS_STYLEBUTTON_LINK</option>
			</field>
		</fieldset>
	</fields>
</form>